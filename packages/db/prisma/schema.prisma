generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id              String   @id @default(uuid())
    name            String
    email           String   @unique
    password        String
    passwordConfirm String
    createdAt       DateTime @default(now())
    updateAt        DateTime @updatedAt
}

model Merchent {
    id        String   @id @default(uuid())
    name      String
    email     String   @unique
    auth_type AuthType
    createdAt DateTime @default(now())
    updateAt  DateTime @updatedAt
}

enum AuthType {
    Google
    Github
}
